{
  "manifest_version": 3,
  "name": "Lightweight Dev Console",
  "version": "1.0",
  "description": "A draggable, transparent dev console that shows console logs and errors in real-time.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Toggle Dev Console"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["consoleStyle.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["consoleStyle.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
